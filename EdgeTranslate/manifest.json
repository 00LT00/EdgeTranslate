{
    "name": "__MSG_AppName__",
    "description": "__MSG_Description__",
    "version": "0.2.1",
    "default_locale": "zh_CN",
    "permissions": [
        "contextMenus",
        "storage",
        "tabs",
        "file://*/*",
        "*://*/*"
    ],
    "background": {
        "persistent": false,
        "scripts": [
            "translate.js",
            "init.js"
        ]
    },
    "browser_action": {
        "default_popup": "./popup/popup.html"
    },
    "content_scripts": [
        {
            "matches": [
                "file://*/*",
                "*://*/*"
            ],
            "css": [
                "./display/display.css"
            ],
            "js": [
                "./display/engine.js",
                "./display/template.js",
                "./display/display.js",
                "./select.js",
                "./translate.js"
            ]
        }
    ],
    "icons": {
        "16": "icon/icon16.png",
        "48": "icon/icon48.png",
        "128": "icon/icon128.png"
    },
    "options_ui": {
        "page": "./options/options.html",
        "chrome_style": false
    },
    "manifest_version": 2
}
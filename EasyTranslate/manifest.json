{
  "name": "Easy Translate",
  "description": "Translate what you want.",
  "version": "0.0.1",
  "permissions": [
    "contextMenus",
    "storage",
    "tabs",
    "file://*",
    "*://*/*"
  ],
  "background": {
    "persistent": false,
    "scripts": [
      "main.js"
    ]
  },
  "browser_action": {
    "default_popup": "options.html"
  },
  "content_scripts": [
    {
      "matches": [
        "file://*",
        "*://*/*"
      ],
      "css": [
        "./display/display.css"
      ]
    }
  ],
  "manifest_version": 2
}
{
    "name": "__MSG_AppName__",
    "description": "__MSG_Description__",
    "version": "1.6.6",
    "default_locale": "zh_CN",
    "background": {
        "scripts": ["background.js"]
    },
    "browser_action": {
        "default_popup": "./popup/popup.html",
        "default_icon": {
            "16": "icon/icon16.png",
            "48": "icon/icon48.png",
            "128": "icon/icon128.png"
        }
    },
    "commands": {
        "_execute_browser_action": {
            "suggested_key": {
                "default": "Alt+Q"
            }
        },
        "change_language_setting": {
            "description": "__MSG_ChangeLanguageSetting__"
        },
        "translate_selected": {
            "description": "__MSG_TranslateSelectedText__"
        },
        "fix_result_frame": {
            "suggested_key": {
                "default": "Alt+X"
            },
            "description": "__MSG_FixResultFrame__"
        },
        "close_result_frame": {
            "suggested_key": {
                "default": "Alt+C"
            },
            "description": "__MSG_CloseResultFrame__"
        },
        "exchange_source_target_lang": {
            "suggested_key": {
                "default": "Alt+S"
            },
            "description": "__MSG_ExchangeSourceAndTargetLanguage__"
        },
        "pronounce_original": {
            "description": "__MSG_PronounceOriginal__"
        },
        "pronounce_translated": {
            "description": "__MSG_PronounceTranslated__"
        },
        "copy_result": {
            "description": "__MSG_CopyResult__"
        }
    },
    "web_accessible_resources": [
        "display/style/result.css",
        "display/style/loading.css",
        "display/style/error.css",
        "youdao/*",
        "google/*"
    ],
    "content_security_policy": "script-src 'self' 'unsafe-eval' https://www.google-analytics.com; object-src 'self'",
    "icons": {
        "16": "icon/icon16.png",
        "48": "icon/icon48.png",
        "128": "icon/icon128.png"
    },
    "options_ui": {
        "page": "./options/options.html",
        "open_in_tab": true,
        "chrome_style": false
    },
    "manifest_version": 2
}

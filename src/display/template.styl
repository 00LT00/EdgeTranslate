hover-color = #777;

body
	padding: 10%;
	margin: 0 0 0 3px;
	box-shadow: -2px 0 1px 1px #ddd;
	border: 0;
	box-sizing: border-box;


.translate-icon 
	font-family: "translateIcon";
	font-style: normal;
	-webkit-font-smoothing: antialiased;
	-moz-osx-font-smoothing: grayscale;
	color: #aaa;
	width: 5%;
	cursor: pointer; 
	:hover
		color: #777;

/* 关闭页面的图标 */
.translate-icon
	font-size: larger;
	position: relative;
	top: 5%;
	width: 10px;
	height: 10px;
	
.translate-icon-close 
	left: 94%;	
	&::before 
		content: "\e624";
	&:hover 
		color: hover-color;

.translate-fix 
	left: 90%;
	&:hover 
		color: hover-color;

.translate-icon-tuding-full 
	display: none;
	&::before 
		content: "\e61b";
		
.translate-icon-tuding-fix
	&::before 
		content: '\e607';


.translate-content-title 
	color: gray;
	font-size: medium;


.translate-word-type 
	color: gray;
	font-size: smaller;


.translate-phonetic-symbol-content 
	font-size: small;
	font-weight: lighter;
	position: relative;
	left: 12%;
	

.translate-common-meanings-content 
	font-size: small;
	font-weight: lighter;
	position: relative;
	left: 12%;


.translate-main-meaning-content-larger 
	font-size: 30px;
	font-weight: medium;


.translate-main-meaning-content-large 
	font-size: large;
	font-weight: medium;


.translate-main-meaning-content-small 
	font-size: medium;
	font-weight: medium;


.translate-main-meaning-content-smaller 
	font-size: medium;
	font-weight: medium;


.translate-content 
	font-size: smaller;
	display: block;
	margin-left: 15%;
	font-weight: light;


.translate-synonyms-words 
	font-size: smaller;
	display: block;
	margin-left: 15%;
	font-weight: light;

ul
	.translate-list li 
		list-style-type: none;

ol
	li
		list-style-type: demical;


.translate-sentences 
	font-size: smaller;
	display: block;
	font-weight: light;


/*change scrollbar style*/
::-webkit-scrollbar
	width: 6px;
	background: rgba(118,176,243,.3);
	border-radius: 5px;

::-webkit-scrollbar-button 
	display: none;

::-webkit-scrollbar-thumb 
	width: 8px;
	min-height: 15px;
	background: rgba(0,0,0,.2);
	border-radius: 5px;
	:hover 
		background: rgba(0,0,0,.6);

::-webkit-scrollbar-track 
	background-color: #fff;

::-webkit-scrollbar-track-piece 
	background: #fff;


image-size = 25px;
/*
 * 划词翻译按钮样式
 */
#translate-button
    width: image-size;
    height: image-size;
    padding: 0.5%;
    position: absolute;
    background-color: white;
    display: none;
    box-shadow: 0px 0px 2px 2px #ddd;
    cursor: pointer;
    border-radius: 50%;
    z-index: 2147483648;
    box-sizing: content-box;
    transition: box-shadow 200ms ease-in-out; // set transtition effect on hover occurs
    img
        width: image-size;
        height: image-size;


#translate-button:hover
    box-shadow: 0px 0px 10px 4px #bbb;
